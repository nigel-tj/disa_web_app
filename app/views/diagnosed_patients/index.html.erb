<%- model_class = DiagnosedPatient -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:gender) %></th>
      <th><%= model_class.human_attribute_name(:age) %></th>
      <th><%= model_class.human_attribute_name(:latitude) %></th>
      <th><%= model_class.human_attribute_name(:longitude) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:disease_id) %></th>
      <th><%= model_class.human_attribute_name(:area) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @diagnosed_patients.each do |diagnosed_patient| %>
      <tr>
        <td><%= link_to diagnosed_patient.id, diagnosed_patient_path(diagnosed_patient) %></td>
        <td><%= diagnosed_patient.gender %></td>
        <td><%= diagnosed_patient.age %></td>
        <td><%= diagnosed_patient.latitude %></td>
        <td><%= diagnosed_patient.longitude %></td>
        <td><%= diagnosed_patient.status %></td>
        <td><%= diagnosed_patient.disease_id %></td>
        <td><%= diagnosed_patient.area %></td>
        <td><%=l diagnosed_patient.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      diagnosed_patient_path(diagnosed_patient), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_diagnosed_patient_path(diagnosed_patient), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      diagnosed_patient_path(diagnosed_patient),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_diagnosed_patient_path,
            :class => 'btn btn-primary' %>
